{
    "compilerOptions": {
      "target": "ES6",                        // Define o alvo da compilação como ECMAScript 6
      "module": "commonjs",                   // Define o sistema de módulos como CommonJS
      "outDir": "./dist",                     // Define o diretório de saída para os arquivos compilados
      "rootDir": "./src",                     // Define o diretório raiz dos arquivos de entrada
      "strict": true,                         // Habilita todas as verificações de tipo estritas
      "esModuleInterop": true,                // Habilita a interoperabilidade com módulos ES
      "skipLibCheck": true,                   // Pula a verificação de tipos em arquivos de declaração
      "forceConsistentCasingInFileNames": true ,// Força a consistência de maiúsculas e minúsculas nos nomes de arquivos
      "typeRoots": ["./node_modules/@types", "./src/@types"] // Define os diretórios raiz para arquivos de declaração de tipos
    },
    "include": ["src/**/*"],                  // Inclui todos os arquivos TypeScript no diretório src
    "exclude": ["node_modules"]               // Exclui o diretório node_modules
  }